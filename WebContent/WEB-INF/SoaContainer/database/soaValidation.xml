<?xml version="1.0" encoding="GBK"?>

<soaValidation>
	  <type name="chineseChar" regular="^[\u4E00-\u9FA5\uF900-\uFA2D]*$" description="中文字符" />
      <type name="commonChar" regular="^[A-Za-z0-9_]*$" description="普通英文字符：字母、数字和下划线" />
      <type name="nonSpecialChar" regular="^[\u4E00-\u9FA5\uF900-\uFA2DA-Za-z0-9_]*$" description="非特殊字符(如:+()#@)，包括数字、字母、下划线和汉字" />
	  <type name="email" regular="^\w+([-+.]\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*$" description="电子邮件" />
	  <type name="url" regular="http://([\w-]+\.)+[\w-]+(/[\w- ./?%&amp;=]*)?" description="网址" />
	  <type name="dhhm" regular="^((0\d{2,3})-)(\d{7,8})(-(\d{3,}))?$" description="电话号码" />
	  <type name="sjhm" regular="^0*(13|15)\d{9}$" description="手机号码" />
	  <type name="zxbm" regular="01|02|03|04" description="自定义编码字典" />    
</soaValidation>